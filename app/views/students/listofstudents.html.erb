<a> <%= link_to "Home", :controller => "admin", :action => "dashboard" %> </a>
<h1>List of students </h1>

<p style="color: green"><%= notice %></p>

<table class= "table table-striped table-bordered">
<thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Max. Issuing Capacity</th>
    
  </tr.
</thead> 

<div id="users">

  <% @user.each do |user| %>
    <tr>
      <% if user.role == "Student" %>	
        <td><%= user.name %></td>
      	<td><%= user.email %></td>
        <td><%= user.issuingcap %></td>
        

      	      <% end %>
     </tr> 
     

  <% end %>
</div>
</table>






